<?xml version="1.0" encoding="utf-8" standalone="no"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.5"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

	<servlet>
		<servlet-name>SaveUserProfile</servlet-name>
		<servlet-class>com.google.cloud.training.conference.SaveUserProfile
		</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>SaveUserProfile</servlet-name>
		<url-pattern>/saveprofile</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>HomePage</servlet-name>
		<jsp-file>/homepage.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>HomePage</servlet-name>
		<url-pattern>/homepage</url-pattern>
	</servlet-mapping>


	<servlet>
		<servlet-name>DeveloperPage</servlet-name>
		<jsp-file>/developer.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>DeveloperPage</servlet-name>
		<url-pattern>/developer</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>ListConferencesPage</servlet-name>
		<jsp-file>/listconferences.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>ListConferencesPage</servlet-name>
		<url-pattern>/listconferences</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>ScheduleConferencePage</servlet-name>
		<jsp-file>/scheduleconference.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>ScheduleConferencePage</servlet-name>
		<url-pattern>/scheduleconference</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>UserProfilePage</servlet-name>
		<jsp-file>/userprofile.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>UserProfilePage</servlet-name>
		<url-pattern>/userprofile</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>VenuesPage</servlet-name>
		<jsp-file>/venues.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>VenuesPage</servlet-name>
		<url-pattern>/venues</url-pattern>
	</servlet-mapping>

    <security-constraint>
        <web-resource-collection>
            <url-pattern>/userprofile</url-pattern>
            <url-pattern>/scheduleconference</url-pattern>
            
        </web-resource-collection>
        <auth-constraint>
            <role-name>*</role-name>
        </auth-constraint>
    </security-constraint>

    <security-constraint>
        <web-resource-collection>
            <url-pattern>/developer</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>

	<welcome-file-list>
		<welcome-file>homepage.jsp</welcome-file>
	</welcome-file-list>

</web-app>